<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/school_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="招生电话"
                android:textSize="@dimen/space_20"/>

            <TextView
                android:id="@+id/school_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="123456789"
                android:textSize="@dimen/space_20" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="院校所在地"
                android:textSize="@dimen/space_20"/>

            <TextView
                android:id="@+id/school_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="院校类别"
                android:textSize="@dimen/space_20" />


            <TextView
                android:id="@+id/school_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工科"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="重点学科数"
                android:textSize="@dimen/space_20" />

            <TextView
                android:id="@+id/school_main_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="所属部门"
                android:textSize="@dimen/space_20" />

            <TextView
                android:id="@+id/school_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:divider="@color/gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="硕士点数"
                android:textSize="@dimen/space_20" />

            <TextView
                android:id="@+id/school_shuoshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="博士点数"
                android:textSize="@dimen/space_20" />

            <TextView
                android:id="@+id/school_boshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="985"
                android:textSize="@dimen/space_20" />

            <TextView
                android:id="@+id/school_is_985"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="985"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:tag="实线"
            android:background="@color/gray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:paddingLeft="@dimen/space_5"
                android:textColor="@color/black"
                android:text="211"
                android:textSize="@dimen/space_20" />


            <TextView
                android:id="@+id/school_is_211"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="211"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/space_20" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

